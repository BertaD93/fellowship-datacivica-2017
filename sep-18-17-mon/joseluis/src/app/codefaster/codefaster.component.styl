.feature{
    position:relative;
    padding:4rem 0;
    -webkit-font-smoothing:antialiased}
.feature img{
    background-color:#22292F}
.feature-light {
    background: #fff;
}
.feature-light .feature-heading {
    color: #444;
}
.feature-heading {
    position: relative;
    font-size: 2.5rem;
    font-weight: 900;
    text-transform: uppercase;
}

.feature-light .feature-text {
    color: #666;
}
.feature-text {
    font-size: 1.3rem;
}
p {
    margin-top: 0;
    margin-bottom: 1rem;
}

.feature-gray {
    background: #eee;
}

.feature-dark {
    background: #2d343a;
}

.feature-dark .feature-heading {
    color: #fff;
}

.feature-dark .feature-text {
    color: #ccc;
}