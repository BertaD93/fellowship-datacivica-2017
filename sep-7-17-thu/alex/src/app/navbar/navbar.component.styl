nav 
    background-color #001C20

.logo-sails 
    height 40px
    width auto

.item-nav a
    color white
    margin-left 20px
    font-size: 15px

.version
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box
    display inline-block
    float left
    color #FFF
    font-family proxima-nova-soft,Helvetica,Arial,sans-serif
    padding-top 10px
    padding-left 15px
    width 100%
    max-width 100px
    z-index 1000
    text-align left
    .dropdown-wrapper
        -moz-box-sizing border-box
        -webkit-box-sizing border-box
        box-sizing border-box
        position relative
        width 100%
        font-family Lato,Helvetica,Arial,sans-serif
        text-transform none
        .options-container
            position absolute
            left 0
            width 100%
            z-index 20
            top 34px
        .resting-state
            -webkit-transition: all 250ms;
            -moz-transition: all 250ms;
            -ms-transition: all 250ms;
            -o-transition: all 250ms;
            font-size: 12px;
            color: #FFF;
            border: 1px solid rgba(255,255,255,.1);
            background-color: rgba(255,255,255,.1);
            .dropdown-arrow-icon
                position: absolute;
                right: 6px;
                top: 7.5px;